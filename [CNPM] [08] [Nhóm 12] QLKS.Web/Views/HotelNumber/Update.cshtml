@model HotelNumberVM

<div class="w-100 card border-0 p-4">
  <div class="card-header bg-success bg-gradient m-lg-0 py-3">
    <div class="row">
      <div class="col-12 text-center">
        <h2 class="text-white py-2">Update Hotel Number</h2>
      </div>
    </div>
  </div>
  <div class="card-body p-4 border">
    <form method="post" class="row">
      <input asp-for="HotelNumber.Hotel_Number" hidden>
      <div class="p-3">
        @* <div asp-validation-summary="ModelOnly"></div> *@
        <div class="form-floating py-2 col-12">
          <select asp-for="HotelNumber.HotelId" asp-items="@Model.HotelList" class="form-select border shadow">
            <option disabled selected>--Select Hotel</option>
          </select>
          <label asp-for="HotelNumber.HotelId" class="ms-2"></label>
          <span asp-validation-for="HotelNumber.HotelId" class="text-danger"></span>
        </div>
        <div class="form-floating py-2 col-12">
          <input asp-for="HotelNumber.Hotel_Number" disabled class="form-control border shadow" />
          <label asp-for="HotelNumber.Hotel_Number" class="ms-2"></label>
          <span asp-validation-for="HotelNumber.Hotel_Number" class="text-danger"></span>
        </div>
        <div class="form-floating py-2 col-12">
          <input asp-for="HotelNumber.SpecialDetails" class="form-control border shadow" />
          <label asp-for="HotelNumber.SpecialDetails" class="ms-2"></label>
          <span asp-validation-for="HotelNumber.SpecialDetails" class="text-danger"></span>
        </div>

        <div class="row pt-2">
          <div class="col-6 col-md-3">
            <button type="submit" class="btn btn-success w-100"><i class="bi bi-check-circle"> </i> Update</button>
          </div>
          <div class="col-6 col-md-3">
            <button asp-controller="HotelNumber" asp-action="Index" class="btn btn-secondary w-100">
              <i class="bi bi-x-circle-fill"></i> Cancel
            </button>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>
@section Scripts {
  @{
    <partial name="_ValidationScriptsPartial" />
  }
}